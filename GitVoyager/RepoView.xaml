<Window x:Class="GitVoyager.RepoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitVoyager"
        xmlns:viewModel="clr-namespace:GitVoyager.ViewModels"
        mc:Ignorable="d"
        Title="RepoView" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <viewModel:RepoViewModel/>
    </Window.DataContext>
    <Grid>
        <Image Source="{Binding UserModel.AvatarUrl}"
               Width="100"
               Height="100"/>
        <TextBlock Text="{Binding UserModel.Name}"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</Window>
